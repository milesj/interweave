{
  "name": "interweave-root",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo create-config babel --esm --silent && rollup --config && yarn run type",
    "clean": "rm -rf packages/*/{lib,esm,*.tsbuildinfo}",
    "coverage": "yarn run jest --coverage",
    "lint": "beemo eslint",
    "jest": "beemo jest",
    "posttest": "yarn run lint",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:bundle": "yarn run build && beemo create-config typescript && webpack && serve ./tests/",
    "format": "beemo prettier",
    "prerelease": "yarn run clean && yarn run build && yarn test",
    "release": "lerna publish",
    "release:docs": "cd website && yarn deploy",
    "type": "beemo typescript --reference-workspaces --build"
  },
  "engines": {
    "node": ">=10.10.0"
  },
  "devDependencies": {
    "@milesj/build-tools": "^2.13.1",
    "@types/lodash": "^4.14.164",
    "@types/parse5": "^5.0.3",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/react-window": "^1.8.2",
    "babel-loader": "^8.1.0",
    "conventional-changelog-beemo": "^2.0.0",
    "emojibase": "^4.0.1",
    "emojibase-test-utils": "^5.0.1",
    "eslint-plugin-rut": "^2.0.0",
    "jest-rut": "^2.0.0",
    "lerna": "^3.22.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "regenerator-runtime": "^0.13.7",
    "rollup": "^2.33.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rut-dom": "^2.0.0",
    "serve": "^11.3.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      {
        "driver": "typescript",
        "declarationOnly": true
      }
    ],
    "settings": {
      "react": true
    },
    "eslint": {
      "extends": [
        "plugin:rut/recommended"
      ],
      "ignore": [
        "website/"
      ],
      "rules": {
        "no-use-before-define": "off",
        "import/no-named-as-default": "off",
        "require-unicode-regexp": "off",
        "react/jsx-no-literals": "off",
        "react/no-unused-prop-types": "off",
        "react/default-props-match-prop-types": "off",
        "@typescript-eslint/camelcase": "off"
      }
    },
    "jest": {
      "setupFilesAfterEnv": [
        "jest-rut"
      ],
      "testEnvironment": "jsdom",
      "timers": "real"
    }
  },
  "browserslist": [
    "ie 11"
  ]
}
