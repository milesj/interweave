{
  "name": "interweave-root",
  "private": true,
  "scripts": {
    "prepare": "beemo create-config --silent",
    "build": "beemo run-script build --workspaces=*",
    "clean": "rm -rf packages/*/{lib,*.tsbuildinfo}",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "posttest": "yarn run eslint",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:bundle": "yarn run build && beemo create-config typescript && webpack && serve ./tests/",
    "prettier": "beemo prettier",
    "prerelease": "yarn run clean && yarn test && yarn run build",
    "release": "lerna publish",
    "type": "beemo typescript --reference-workspaces --build"
  },
  "devDependencies": {
    "@milesj/build-tools": "^0.57.0",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "babel-loader": "^8.0.6",
    "emojibase": "^2.2.0",
    "emojibase-test-utils": "^3.2.0",
    "eslint-plugin-rut": "^0.1.5",
    "jest-rut": "^0.6.2",
    "lerna": "^3.16.4",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "regenerator-runtime": "^0.13.3",
    "rut": "^0.7.3",
    "serve": "^11.2.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@milesj/build-tools",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "prettier",
      "typescript"
    ],
    "settings": {
      "react": true
    },
    "eslint": {
      "extends": [
        "plugin:rut/recommended"
      ],
      "rules": {
        "import/no-named-as-default": "off",
        "require-unicode-regexp": "off",
        "react/jsx-no-literals": "off",
        "react/no-unused-prop-types": "off",
        "react/default-props-match-prop-types": "off",
        "@typescript-eslint/camelcase": "off"
      }
    },
    "jest": {
      "setupFilesAfterEnv": [
        "jest-rut"
      ],
      "timers": "real"
    }
  },
  "browserslist": [
    "ie 11"
  ]
}
